.card
  box-sizing: border-box
  position relative
  display: inline-block
  -webkit-perspective: 1000px
  perspective: 1000px
  transform-style: preserve-3d
  visibility:visible
  opacity:1
  width: 15%
  height:80px
  margin-bottom: 8px
  will-change: height
  transition: height .6s ease-in-out;

.card-front, .card-back
  position:absolute;
  top: 0;
  left: 0;
  width: 100%
  height: 100%

.card-front
  transform: rotateY(0deg);
  -webkit-transition: opacity .3s, -webkit-transform .3s;
  transition: opacity .3s, -webkit-transform .3s;
  -o-transition: transform .3s, opacity .3s;
  transition: transform .3s, opacity .3s;
  opacity: 1
  
.card-back
  -webkit-transform: rotateY(-180deg);
  transform: rotateY(-180deg);
  -webkit-transition: opacity .3s, -webkit-transform .3s;
  transition: opacity .3s, -webkit-transform .3s;
  -o-transition: transform .3s, opacity .3s;
  transition: transform .3s, opacity .3s;
  opacity: 0;

.card-image, .card-back-image
  height: 100%
  width: 100%
  height:80px
  border-radius: 5px
  -webkit-transform-style: preserve-3d
  transform-style: preserve-3d

.card.flipped .card-front
  transform: rotateY(180deg);
  -webkit-transform: rotateY(180deg);
  transition: transform .6s, opacity .3s;
  -o-transition: transform .6s, opacity .3s;
  transition: opacity .3s, -webkit-transform .6s;
  -webkit-transition: opacity .3s, -webkit-transform .6s;
  opacity: 0;

.card.flipped .card-back
  transform: rotateY(0deg);
  -webkit-transform: rotateY(0deg);
  transition: opacity .3s, -webkit-transform .6s;
  transition: transform .6s, opacity .3s;
  -webkit-transition: opacity .3s, -webkit-transform .6s;
  -o-transition: transform .6s, opacity .3s;
  opacity: 1

.guessed
  visibility:hidden;
  opacity:0;
  transition: visibility 0s linear 0.6s, opacity 0.6s linear;

@media screen and (orientation: landscape) and (min-height: 520px) and (min-width: 640px)
  .card, .card-image, .card-back-image
    height: 120px

@media screen and (orientation: landscape) and (min-width: 1024px) and (min-height: 768px)
  .card, .card-image, .card-back-image
    height: 180px

@media screen and (orientation: portrait) and (min-width: 768px) and (min-height: 480px)
  .card, .card-image, .card-back-image
    height: 130px

@media screen and (orientation: portrait) and (min-width: 1024px) and (min-height: 768px)
  .card, .card-image, .card-back-image
    height: 180px



  
