.card
  box-sizing: border-box
  position relative
  display: inline-block
  -webkit-perspective: 1000px
  perspective: 1000px
  transform-style: preserve-3d
  visibility:visible
  opacity:1
  width: 15%
  height:80px
  margin-bottom: 8px;
  will-change: height;
  transition: height .6s ease-in-out;

.card-front, .card-back
  position:absolute;
  width: 100%;
  height: 100%;
  -webkit-transition: transform  0.6s, opacity 0.6s;
  -o-transition: transform  0.6s, opacity 0.6s;
  transition:transform  0.6s, opacity 0.6s;
	transform-style: preserve-3d


.card-front
  transform: rotateY(0deg)
  
.card-back
  transform: rotateY(180deg)

.card-image, .card-back-image
  height: 100%
  width: 100%
  height:80px
  border-radius: 5px

.card-flipper
  transform-style: preserve-3d
  transition: transform 0.6s
  

.card.flipped .card-front
  -ms-transform: rotateY(-180deg)
  transform: rotateY(-180deg)
  opacity: 0

.card.flipped .card-back
  transform: rotateY(0deg)

.guessed
  visibility:hidden;
  opacity:0;
  transition: visibility 0s linear 0.6s, opacity 0.6s linear;

@media screen and (orientation: landscape) and (min-height: 520px) and (min-width: 640px)
  .card, .card-image, .card-back-image
    height: 120px

@media screen and (orientation: landscape) and (min-width: 1024px) and (min-height: 768px)
  .card, .card-image, .card-back-image
    height: 180px

@media screen and (orientation: portrait) and (min-width: 768px) and (min-height: 480px)
  .card, .card-image, .card-back-image
    height: 130px

@media screen and (orientation: portrait) and (min-width: 1024px) and (min-height: 768px)
  .card, .card-image, .card-back-image
    height: 180px



  
