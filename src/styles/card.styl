.card
  box-sizing: border-box;
  position relative
  display: inline-block
  width: calc(910px / 6)
  margin-right: 10px
  margin-bottom: 10px
  height: 200px
  perspective: 1000px

.card:nth-child(6n)
  margin-right: 0

.card-front
  position: absolute
  height: 200px
  transform: rotateY(0deg)
  backface-visibility: hidden
  
.card-back
  position: absolute
  height: 200px
  transform: rotateY(180deg)
  backface-visibility: hidden

.card-image
  height: 100%
  width: calc(910px / 6)

.card-back-image
  height: 100%
  width: calc(910px / 6)
  border-radius: 5px
  


.card-flipper
  transform-style: preserve-3d
  transition: transform 0.6s
  
.card.flip .card-flipper
  transform: rotateY(180deg)