.card
  box-sizing: border-box
  position relative
  display: inline-block
  perspective: 1000px
  visibility:visible;
  opacity:1
  width: 15%
  height:80px
  margin-bottom: 8px;
  will-change: height;
  transition: height .6s ease-in-out;

.card-front
  position: absolute
  transform: rotateY(0deg)
  backface-visibility: hidden
  
.card-back
  position: absolute
  transform: rotateY(180deg)
  backface-visibility: hidden

.card-image
  height: 100%
  width: 100%
  height:80px

.card-back-image
  height: 100%
  width 100%
  height:80px
  border-radius: 5px

.card-flipper
  transform-style: preserve-3d
  transition: transform 0.6s
  
.card.flipped .card-flipper
  transform: rotateY(180deg)

.guessed
  visibility:hidden;
  opacity:0;
  transition: visibility 0s linear 0.6s, opacity 0.6s linear;

@media screen and (orientation: landscape) and (min-height: 480px) and (min-width: 640px)
  .card, .card-image, .card-back-image
    height: 120px

@media screen and (orientation: landscape) and (min-width: 1024px) and (min-height: 768px)
  .card, .card-image, .card-back-image
    height: 180px

@media screen and (orientation: portrait) and (min-width: 768px) and (min-height: 480px)
  .card, .card-image, .card-back-image
    height: 130px

@media screen and (orientation: portrait) and (min-width: 1024px) and (min-height: 768px)
  .card, .card-image, .card-back-image
    height: 180px



  
