.game-window
  display:flex
  flex-wrap: wrap
  justify-content: space-between
  width: 100%;
  max-width: 460px
  min-width: 320px
  padding: 0 16px;

.game-window_reset-btn
  font-size: 14px
  border: none
  background: none
  color: white
  cursor: pointer

@media screen and (orientation: landscape) and (min-width: 640px) and (min-height: 480px)
  .game-window
    max-width: 640px

@media screen and (orientation: landscape) and (min-width: 1024px) and (min-height: 768px)
  .game-window
    max-width: 960px

@media screen and (orientation: portrait) and (min-width: 768px) and (min-height: 480px)
  .game-window
    max-width: 768px

@media screen and (orientation: portrait) and (min-width: 1024px) and (min-height: 768px)
  .game-window
    max-width: 960px